{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "patients": {
        "ClusterId": "patientService",
        "Match": {
          "Path": "/patients/{**catch-all}"
        }
      },
      "signals": {
        "ClusterId": "ekgSignalService",
        "Match": {
          "Path": "/signals/{**catch-all}"
        }
      },
      "analysis": {
        "ClusterId": "analysisService",
        "Match": {
          "Path": "/analysis/{**catch-all}"
        }
      },
      "batches": {
        "ClusterId": "batchProcessingService",
        "Match": {
          "Path": "/batches/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "patientService": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5055"
          }
        }
      },
      "ekgSignalService": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5125"
          }
        }
      },
      "analysisService": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5246"
          }
        }
      },
      "batchProcessingService": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5181"
          }
        }
      }
    }
  },
  "HealthChecks": {
    "Services": [
      {
        "Name": "PatientService",
        "Uri": "http://localhost:5055/health"
      },
      {
        "Name": "EkgSignalService",
        "Uri": "http://localhost:5125/health"
      },
      {
        "Name": "AnalysisService",
        "Uri": "http://localhost:5246/health"
      },
      {
        "Name": "BatchProcessingService",
        "Uri": "http://localhost:5181/health"
      }
    ],
    "EvaluationTimeInSeconds": 10
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowCredentials": true
  }
}